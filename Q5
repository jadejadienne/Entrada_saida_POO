import java.util.Scanner;

public class Q5 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Primeiro, informe seu nome e depois sua idade em anos, meses e dias:");

        System.out.print("Nome: ");
        String nome = scanner.nextLine(); 

        System.out.print("Anos: ");
        int anos = scanner.nextInt();

        System.out.print("Meses: ");
        int meses = scanner.nextInt();

        System.out.print("Dias: ");
        int dias = scanner.nextInt();

        int idadeEmDias = (anos * 365) + (meses * 30) + dias;

        System.out.println("Idade expressa em dias: " + idadeEmDias);

     
        System.out.println(" " + nome + " tem " + anos + " anos, " + meses + " meses e " + dias + " dias de idade.");
        System.out.println("Assim, sua idade expressa em dias Ã© " + idadeEmDias);

        scanner.close();
    }
}
